{
  "compilerOptions": {
    "target": "ES2020", // 최신 JavaScript 기능 사용
    "module": "commonjs", // Node.js와 호환되게 설정
    "rootDir": "./src", // 소스 파일 위치
    "outDir": "./dist", // 컴파일된 파일 저장 위치
    "esModuleInterop": true, // 모듈 호환성 활성화
    "strict": true, // 엄격한 타입 검사
    "skipLibCheck": true, // 라이브러리 타입 체크 스킵
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ], // 컴파일 대상 파일
  "exclude": [
    "node_modules",
  ] // 제외할 폴더
}